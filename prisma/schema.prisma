generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String @id @default(cuid())
  // name     String
  username String @unique
  password String

  createdAt DateTime @default(now())

  expenses Expense[]
  incomes  Income[]
}

model Expense {
  id       String @id @default(cuid())
  amount   Float
  // title    String
  category String

  date      DateTime
  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id])
}

model Income {
  id     String @id @default(cuid())
  amount Float
  source String

  date      DateTime
  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id])
}
